{
    "cmake.configureOnOpen": false,
    "editor.wordWrap": "off",
    "editor.formatOnType": true,
    "editor.overviewRulerBorder": false,
    "editor.rulers": [
        120
    ],
    "dart.renameFilesWithClasses": "always",
    "[dart]": {
        "editor.defaultFormatter": "Dart-Code.dart-code"
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "pubspec.yaml": ".metadata, pubspec.lock, analysis_options.yaml, devtools_options.yaml",
        "graph.svg": "graph.dot",
        "layers.sh": "layers.svg",
    },
    "markdownlint.config": {
        "MD024": { // Rule for multiple headings with the same name
            "siblings_only": true // Only check for duplicate headings within the same level
        },
    },
    "files.exclude": {
        "android/": false,
        "ios/": false,
        "macos/": false,
        "windows/": true,
        "linux/": false,
        "web/": false,
        "node_modules/": true,
        "build/": true,
        ".dart_tool/": true,
        ".firebase/": true,
        ".idea/": true,
    },
    "editor.formatOnSave": true,
    "workbench.editor.closeOnFileDelete": true,
    "cSpell.enabled": true,
    "cSpell.words": [
        "vteam",
        "fpaint"
    ],
    "cSpell.ignorePaths": [
        // "*.json"
    ],
    "files.autoSave": "onFocusChange",
    "CodeGPT.apiKey": "Ollama",
}